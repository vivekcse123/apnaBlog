/* General Page Styles */
.profile-page {
  background-color: #f5f7fb;
  padding: 2rem 0;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.profile-container {
  max-width: 1200px;
}

/* Profile Header */
.profile-header img {
  object-fit: cover;
}

.profile-header h2 {
  font-size: 1.8rem;
}

.profile-header p {
  font-size: 0.95rem;
}

/* Social Stats */
.social-stats div h5 {
  font-size: 1.25rem;
}

.social-stats div small {
  font-size: 0.85rem;
}

/* Buttons */
.btn {
  border-radius: 0.75rem;
  font-weight: 600;
}

.btn i {
  vertical-align: middle;
}

/* About Section */
.about-section h5 {
  font-size: 1.1rem;
  margin-bottom: 0.5rem;
}

.about-section p {
  font-size: 0.95rem;
  line-height: 1.5;
}

/* User Posts */
.user-posts h5 {
  font-size: 1.2rem;
  margin-bottom: 1rem;
}

.user-posts .card {
  border: none;
  border-radius: 1rem;
  overflow: hidden;
}

.user-posts .card img {
  object-fit: cover;
  max-height: 250px;
}

.user-posts .card-body h6 {
  font-size: 1rem;
}

.user-posts .card-body p {
  font-size: 0.9rem;
}

.user-posts .card-body i {
  cursor: pointer;
  font-size: 0.95rem;
}

/* Right Sidebar */
.suggested-friend img {
  object-fit: cover;
}

.suggested-friend p {
  font-size: 0.95rem;
  margin-bottom: 0;
}

.trending-section h6 {
  font-size: 1rem;
}

.trending-item {
  padding: 0.25rem 0;
  font-size: 0.9rem;
}

/* Responsive adjustments */
@media (max-width: 992px) {
  .profile-container {
    flex-direction: column;
  }

  .profile-container .col-md-7,
  .profile-container .col-md-5 {
    max-width: 100%;
    padding: 2rem;
  }

  .profile-header {
    flex-direction: column;
    text-align: center;
  }

  .profile-header img {
    margin-bottom: 1rem;
  }
}


